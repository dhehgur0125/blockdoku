<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_bg"
    android:padding="@dimen/spacing_6"
    android:id="@+id/bomb_tutorial">

    <!-- Content Container -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Bomb Icon -->
            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/gradient_bomb_icon_bg"
                android:layout_marginBottom="@dimen/spacing_6">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bomb"
                    app:tint="@color/white"
                    android:contentDescription="@string/bomb" />

            </FrameLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bomb_system"
                android:textSize="@dimen/text_2xl"
                android:textColor="@color/gray_800"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_2" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bomb_subtitle"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/gray_600"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_8" />

            <!-- Bomb Example 1: Safe -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <!-- Safe Bomb -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/gradient_bomb_safe"
                        android:layout_marginEnd="@dimen/spacing_4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="8"
                            android:textSize="@dimen/text_2xl"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/safe"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/safe_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bomb Example 2: Warning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <!-- Warning Bomb -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/gradient_bomb_warning"
                        android:layout_marginEnd="@dimen/spacing_4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="4"
                            android:textSize="@dimen/text_2xl"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/warning"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/warning_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bomb Example 3: Danger -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/red_500"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <!-- Danger Bomb -->
                    <FrameLayout
                        android:id="@+id/dangerBomb"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/gradient_bomb_danger"
                        android:layout_marginEnd="@dimen/spacing_4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="1"
                            android:textSize="@dimen/text_2xl"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/danger"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/red_600"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/danger_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tip Box -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/orange_50"
                app:strokeColor="@color/orange_200"
                app:strokeWidth="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_4"
                    android:text="@string/bomb_tip"
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/orange_800"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Start Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large"
        android:text="@string/start"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button_primary"
        app:cornerRadius="@dimen/radius_2xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
