<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_bg"
    android:padding="@dimen/spacing_6"
    android:id="@+id/settings">

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="@dimen/text_3xl"
        android:textColor="@color/gray_800"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Settings Content -->
    <ScrollView
        android:id="@+id/scrollSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_6"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintBottom_toTopOf="@id/btnResetData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sound Setting -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <!-- Icon -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_purple_light"
                        android:layout_marginEnd="@dimen/spacing_3">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_volume"
                            app:tint="@color/purple_600"
                            android:contentDescription="@string/sound" />

                    </FrameLayout>

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sound_desc"
                            android:textSize="@dimen/text_xs"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vibration Setting -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_pink_light"
                        android:layout_marginEnd="@dimen/spacing_3">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_vibrate"
                            app:tint="@color/pink_600"
                            android:contentDescription="@string/vibration" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vibration"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haptic_feedback"
                            android:textSize="@dimen/text_xs"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchVibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Theme Setting -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_orange_light"
                        android:layout_marginEnd="@dimen/spacing_3">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_palette"
                            app:tint="@color/orange_600"
                            android:contentDescription="@string/theme" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtThemeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/light_mode"
                            android:textSize="@dimen/text_xs"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/gray_400"
                        android:contentDescription="@string/navigate" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- About Setting -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_blue_light"
                        android:layout_marginEnd="@dimen/spacing_3">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_info"
                            app:tint="@color/blue_600"
                            android:contentDescription="@string/about" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version"
                            android:textSize="@dimen/text_xs"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/gray_400"
                        android:contentDescription="@string/navigate" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Statistics -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics"
                        android:textSize="@dimen/text_base"
                        android:textColor="@color/gray_800"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtTotalPlays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="127"
                                android:textSize="@dimen/text_2xl"
                                android:textColor="@color/purple_600"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/spacing_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/play_count"
                                android:textSize="@dimen/text_xs"
                                android:textColor="@color/gray_600" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtTotalScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5,890"
                                android:textSize="@dimen/text_2xl"
                                android:textColor="@color/pink_600"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/spacing_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_score"
                                android:textSize="@dimen/text_xs"
                                android:textColor="@color/gray_600" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Reset Data Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResetData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large"
        android:text="@string/reset_data"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red_500"
        app:cornerRadius="@dimen/radius_2xl"
        android:layout_marginTop="@dimen/spacing_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
