<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_bg"
    android:padding="@dimen/spacing_6"
    android:id="@+id/tutorial">

    <!-- Content Container -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_to_play"
                android:textSize="@dimen/text_2xl"
                android:textColor="@color/gray_800"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_2" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_subtitle"
                android:textSize="@dimen/text_sm"
                android:textColor="@color/gray_600"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_8" />

            <!-- Tutorial Animation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_8"
                app:cardCornerRadius="@dimen/radius_2xl"
                app:cardElevation="@dimen/elevation_xl"
                app:cardBackgroundColor="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_4">

                    <!-- 9x9 Grid for Tutorial -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTutorialBoard"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                    <!-- Floating Block -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_marginBottom="-16dp"
                        app:cardCornerRadius="@dimen/radius_xl"
                        app:cardElevation="@dimen/elevation_2xl"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/purple_400"
                        app:strokeWidth="2dp">

                        <androidx.gridlayout.widget.GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_2"
                            app:columnCount="2"
                            app:rowCount="1">

                            <View
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/gradient_block_blue" />

                            <View
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/gradient_block_blue" />

                        </androidx.gridlayout.widget.GridLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Instruction 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="start">

                    <!-- Number Badge -->
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="1"
                        android:textSize="@dimen/text_base"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/circle_purple"
                        android:layout_marginEnd="@dimen/spacing_3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_1_title"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_1_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Instruction 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="start">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="2"
                        android:textSize="@dimen/text_base"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/circle_pink"
                        android:layout_marginEnd="@dimen/spacing_3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_2_title"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_2_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Instruction 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_4"
                    android:gravity="start">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="3"
                        android:textSize="@dimen/text_base"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/circle_orange"
                        android:layout_marginEnd="@dimen/spacing_3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_3_title"
                            android:textSize="@dimen/text_base"
                            android:textColor="@color/gray_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instruction_3_desc"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Skip Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_large"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_3"
            android:text="@string/skip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_gray_200_rounded"
            app:cornerRadius="@dimen/radius_2xl" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_large"
            android:layout_weight="1"
            android:text="@string/next"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/gradient_button_primary"
            app:cornerRadius="@dimen/radius_2xl"
            app:icon="@drawable/ic_arrow_right"
            app:iconTint="@color/white"
            app:iconGravity="end" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>