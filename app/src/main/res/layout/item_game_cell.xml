<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cellContainer"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_margin="0dp">

    <!-- Empty Cell Background (set programmatically based on position) -->
    <View
        android:id="@+id/cellBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Filled Cell Background -->
    <View
        android:id="@+id/cellFilled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_block_purple"
        android:visibility="gone" />

    <!-- Bomb Cell Container -->
    <FrameLayout
        android:id="@+id/cellBomb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bomb_bg"
        android:visibility="gone">

        <!-- Bomb Timer Text -->
        <TextView
            android:id="@+id/txtBombTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="5" />

    </FrameLayout>

</FrameLayout>